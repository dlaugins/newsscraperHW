<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>

  </div>
</div>

{{#each Article}}
{{#if saved}}
{{else}}
<div class="container-fluid article-container">

  <div class='alert alert-success text-center' class = "style_title">
    <h4>{{title}} </h4>
  </div>
  <div class="card">
    <div class="card-header text-center">
      <h4>Article Link: {{link}}</h4>
    </div>
    <div class="card-body text-center">
      <h4>
       <img src={{image}} width = "200px" height = "200px"/>
      </h4>
      <a href="#" class="btn btn-primary btn-lg save"  data="{{_id}}" role="button">Save Article</a>
      <a href="#" class="btn btn-danger btn-lg delete" data="{{_id}}" role="button">Delete Article</a>
      <h4>
        <a href="/saved">Go to Saved Articles</a>
      </h4>
      <form>
        <div class="form-group">
          <label for="comment" class = "note"  >Add note about article:</label>
          <textarea class="form-control" rows="3"  id = "note{{_id}}">{{note}}</textarea>
        </div>
      <button type="submit" class="btn btn-primary btn-lg note" data="{{_id}}">Save Note</button>
      </form>
    </div>
  </div>
</div>
{{/if}}
{{/each}}

<footer class="footer">
  <div class="container">
    <p>Newsie Mongo Scraper</p>
  </div>
</footer>

